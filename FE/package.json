{
  "name": "kolsherut_fe",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 0.2%",
    "not op_mini all"
  ],
  "scripts": {
    "dev": "vite",
    "prebuild": "npm run sitemap:homepage && npm run sitemap:main && npm run synonyms:update",
    "build": "vite build",
    "postbuild": "node scripts/postbuild.cjs",
    "build:development": "cross-env ENVIRONMENT=development npm run build",
    "build:local": "cross-env ENVIRONMENT=local npm run build",
    "build:stage": "cross-env ENVIRONMENT=stage npm run build",
    "build:production": "cross-env ENVIRONMENT=production npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "docker:build": "node scripts/docker-tasks.cjs build %npm_config_env%",
    "docker:build:development": "npm run build:development && npm run docker:build --env=development",
    "docker:build:local": "npm run build:local && npm run docker:build --env=local",
    "docker:build:stage": "npm run build:stage && npm run docker:build --env=stage",
    "docker:build:production": "npm run build:production && npm run docker:build --env=production",
    "docker:save": "node scripts/docker-tasks.cjs save %npm_config_env%",
    "docker:save:development": "npm run docker:save --env=development",
    "docker:save:local": "npm run docker:save --env=local",
    "docker:save:stage": "npm run docker:save --env=stage",
    "docker:save:production": "npm run docker:save --env=production",
    "tar": "npm run docker:build --env=%npm_config_env% && npm run docker:save --env=%npm_config_env%",
    "tar:development": "npm run tar --env=development",
    "tar:local": "npm run tar --env=local",
    "tar:stage": "npm run tar --env=stage",
    "tar:production": "npm run tar --env=production",
    "sitemap:homepage": "node scripts/generateHomepageSitemap.cjs",
    "sitemap:main": "node scripts/generateMainSitemap.cjs",
    "synonyms:update": "node scripts/updateSynonyms.cjs"
  },
  "dependencies": {
    "@fontsource/poppins": "^5.2.5",
    "@hotjar/browser": "^1.0.9",
    "@reduxjs/toolkit": "^2.6.1",
    "axios": "^1.7.9",
    "cross-env": "^10.0.0",
    "dompurify": "^3.3.0",
    "ol": "^10.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-ga4": "^2.1.0",
    "react-jss": "^10.10.0",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.16.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vite-pwa/assets-generator": "^0.2.6",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "pwa-asset-generator": "^8.0.4",
    "shx": "^0.4.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-pwa": "^0.21.1"
  }
}
